React = require "react"
pellet = require "pellet"

module.exports = <%- name %>Component = pellet.createClass
  setupInitialRender: (ctx, next) ->
    ctx.setProps myData: "loaded from an API"
    ctx.setProps showTitle: true, neat: "list item"
    next()

  render: ->
    {showTitle, neat} = @props

    <div className="<%- name %>-<%- type.toLowerCase() %>">
      {<h1>Component <%- name %></h1> if showTitle}
      Coffeescript really saves a lot of typing...
      {<p>Item <br />{neat}x{times}</p> for times in [1..10]}
    </div>

