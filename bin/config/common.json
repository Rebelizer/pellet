{
  "securityFilter": "\\s(user|pass|aws_)\\w*\\s+.+$",

  "server": {
    "favicon": "#PELLET_BIN_DIR#/public/favicon.ico",
    "static": "#PELLET_BIN_DIR#/public"
  },

  "polyfill": {
    "cache": "#PELLET_BIN_DIR#/public/js/polyfill",
    "include": ["domelements", "dom4", "es5"]
  },

  "cluster": {
    "repl": {
      "port": 3001,
      "address": "0.0.0.0"
    }
  },

  "stackTrace": {
    "includeSystemInfo": false
  },

  "winston" :{
    "containers": {
      "console": {
        "console": {
          "level": "info",
          "colorize": true,
          "label": "pellet",
          "timestamp": true
        }
      },
      "alert": {
        "console": {
          "level": "silly",
          "colorize": true,
          "label": "alert",
          "timestamp": true
        }
      }
    }
  }
}