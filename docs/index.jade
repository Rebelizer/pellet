        #slider-flex2.flexslider(data-flex-speed='7000', data-flex-animation='slide', data-flex-directions='hide', data-flex-controls='show', data-flex-controlsalign='center')
          ul.slides
            li
              blockquote.fancy-blockquote
                .row
                  .col-md-12
                    p
                      | This is VEVO stuff.
                    small
                      | VEVO
                      cite(title='Source Title') Manager
            li
              blockquote.fancy-blockquote
                .row
                  .col-md-12
                    p
                      | This is other people in the world.
                    small
                      | World
                      cite(title='Source Title') Executive
